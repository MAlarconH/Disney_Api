// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  name         String?
  phone_number String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Personaje {
  id        Int      @id @default(autoincrement())
  imagen    String
  nombre    String
  edad      Int
  Peso      Float
  historia  String
  p_s_asociada  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("personajes")
}

model Pelicula {
  id        Int      @id @default(autoincrement())
  imagen    String
  titulo    String
  fecha_ini       String
  calificacion    Float 
  psnjs_asociado  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("peliculas")
}

model Genero {
  id        Int      @id @default(autoincrement())
  nombre    String
  imagen    String
  p_s_asociada    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("generos")
}

